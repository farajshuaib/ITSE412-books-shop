<%- include('components/header'); -%>

    <%- include('components/navbar'); -%>


        <style>
            .swiper {
                height: 500px;
            }
        </style>

        <header class="px-5 md:px-8 container mx-auto">
            <!-- Slider main container -->
            <div class="swiper  my-8 rounded-lg ">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                    <!-- Slides -->
                    <div class="swiper-slide relative "><span class="absolute inset-0 bg-black opacity-25 z-20"></span><img class="object-cover h-full w-full" src="/assets/slider1.jpeg" alt="" loading="lazy" /></div>
                    <div class="swiper-slide relative "><span class="absolute inset-0 bg-black opacity-25 z-20"></span><img class="object-cover h-full w-full" src="/assets/slider2.jpeg" alt="" loading="lazy" /></div>
                    <div class="swiper-slide relative "><span class="absolute inset-0 bg-black opacity-25 z-20"></span><img class="object-cover h-full w-full" src="/assets/slider3.jpeg" alt="" loading="lazy" /></div>
                </div>
                <!-- If we need pagination -->
                <div class="swiper-pagination"></div>

            </div>
        </header>


        <main>
            <div class="grid grid-cols-8 gap-8 container mx-auto px-5 md:px-8">
                <div class="col-span-6 bg-white rounded-lg p-5">
                    <!-- search -->
                    <div class="flex items-center gap-5">
                        <input type="search" id="search" name="search" class="px-4 py-2 rounded-lg w-1/3 border border-gray-500 bg-gray-100" placeholder="ابحث عن اسم الكتاب ..." />
                        <button type="button" class="bg-green-600 px-5 py-2 rounded-md text-white">
                            بحث
                        </button>
                    </div>
                    <!-- books -->
                    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3  gap-4 sm:gap-6 md:gap-8 lg:gap-12">

                        <div class="border border-gray-200 rounded-md overflow-hidden ">
                            <img src="/images/logo.png" alt="" loading="lazy" class="h-32 w-44 mx-auto bg-cover bg-center " />
                            <div class="p-3">
                                <h2 class="text-gray-800 text-2xl">steal like artist</h2>
                                <p class="text-gray-700 text-lg">المؤلف: <span>blaa</span> </p>
                                <p class="text-gray-700 text-lg">الناشر: <span>blaa</span> </p>
                                <button type="button" class="flex items-center justify-center block w-full py-3 bg-green-600 text-white rounded-md">
                                    <span>33$</span>
                                    <span>/</span>
                                    <span>شراء</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <sidebar class="col-span-2 bg-white rounded-lg p-5">
                    <h2 class="text-2xl text-gray-900 font-medium border-b border-gray-200">اقسام الكتب</h2>
                    <ul>
                        <li class="my-3 text-xl text-gray-600 font-medium">
                            <button type="button" class="">
                                الكل
                            </button>
                        </li>
                        <% specifications.forEach(element=> { %>
                            <li class="my-3 text-xl text-gray-600 font-medium">
                                <button type="button" class="">
                                    <%- element.name -%>
                                </button>
                            </li>
                            <% });-%>
                    </ul>
                </sidebar>
            </div>
        </main>


        <%- include('components/footer'); -%>


            <script>
                const swiper = new Swiper('.swiper', {
                    // Optional parameters
                    loop: true,
                    autoplay: true,

                    // If we need pagination
                    pagination: {
                        el: '.swiper-pagination',
                    },


                });
            </script>